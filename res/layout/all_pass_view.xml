<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/index_background"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    
    <!-- Top bar -->
    <include layout="@layout/top_bar" />

    <TextView
        android:id="@+id/txt_all_pass1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="@string/all_pass" 
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/img_all_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:src="@drawable/co6" />

    <TextView
        android:id="@+id/txt_all_pass2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/meme"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"/>

</LinearLayout>
